rules_version = '2';

// Firebase Storage security rules for ready-teacher project
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if true; // Public read access for all files
    }
    
    // Developer page images - allow authenticated users to upload
    match /developer-page/{section}/{imageId} {
      allow write, delete: if request.auth != null && request.auth.uid != null;
      allow read: if true; // Public read access
    }
    
    // General user uploads - require authentication
    match /users/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin uploads - require authentication (additional admin checks handled in app)
    match /admin/{allPaths=**} {
      allow read: if true; // Public read access
      allow write, delete: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}